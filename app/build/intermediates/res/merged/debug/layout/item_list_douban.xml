<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/iv_list_douban_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_list_douban_title"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="@string/default_name"
            android:textSize="18sp"/>
        
        <TextView
            android:id="@+id/tv_list_douban_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorSilver"
            android:text="@string/default_author"/>

        <TextView
            android:id="@+id/tv_list_douban_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_summary"
            android:textColor="@color/colorBrulyWood"
            android:lines="1"/>
    </LinearLayout>
</LinearLayout>